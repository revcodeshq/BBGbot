# Production Environment Variables Template
# Copy this file to .env.production and fill in your values

# ===========================================
# REQUIRED VARIABLES (Must be set)
# ===========================================

# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
CLIENT_ID=your_discord_client_id_here
GUILD_ID=your_discord_guild_id_here

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/bbg_bot_production

# ===========================================
# OPTIONAL VARIABLES (Recommended for production)
# ===========================================

# Game API Configuration
WOS_API_SECRET=your_whiteout_survival_api_secret
GEMINI_API_KEY=your_google_gemini_api_key

# CAPTCHA Solving (for gift code redemption)
TWO_CAPTCHA_API_KEY=your_2captcha_api_key

# Discord Role IDs
MEMBER_ROLE_ID=role_id_for_verified_members
BT1_ROLE_ID=role_id_for_bt1_group
BT2_ROLE_ID=role_id_for_bt2_group

# ===========================================
# PRODUCTION-SPECIFIC VARIABLES
# ===========================================

# Environment
NODE_ENV=production

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=./logs
MAX_LOG_SIZE=10485760
MAX_LOG_FILES=5

# Monitoring & Health Checks
MONITORING_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
ERROR_WEBHOOK_URL=https://discord.com/api/webhooks/your_error_webhook_url

# Performance Configuration
CACHE_TTL=300000
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# Security Configuration
SESSION_SECRET=your_secure_session_secret_here
ENCRYPTION_KEY=your_32_character_encryption_key

# Database Optimization
MONGO_POOL_SIZE=10
MONGO_BUFFER_MAX_ENTRIES=0
MONGO_CONNECT_TIMEOUT=30000
MONGO_SOCKET_TIMEOUT=45000

# API Configuration
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3
API_RETRY_DELAY=1000

# Background Tasks
NICKNAME_SYNC_INTERVAL=600000
ANNOUNCEMENT_CHECK_INTERVAL=60000
CLEANUP_INTERVAL=300000

# ===========================================
# EXTERNAL SERVICES (Optional)
# ===========================================

# Analytics & Monitoring
GOOGLE_ANALYTICS_ID=your_ga_id
SENTRY_DSN=your_sentry_dsn

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your_backup_bucket

# ===========================================
# DEVELOPMENT OVERRIDES (Set to false in production)
# ===========================================

DEBUG=false
VERBOSE_LOGGING=false
MOCK_EXTERNAL_APIS=false
