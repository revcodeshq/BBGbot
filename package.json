{
  "name": "bbg-discord-bot",
  "version": "1.0.0",
  "description": "Discord bot for BBG Alliance: game integration, scheduling, giveaways, and more.",
  "main": "index.js",
  "author": "RevCodesHQ <contact@revcodeshq.com>",
  "license": "MIT",
  "keywords": [
    "discord",
    "bot",
    "discord.js",
    "whiteout-survival",
    "game-integration",
    "mongodb",
    "ai",
    "gemini",
    "scheduling",
    "giveaways"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/revcodeshq/BBGbot.git"
  },
  "bugs": {
    "url": "https://github.com/revcodeshq/BBGbot/issues"
  },
  "homepage": "https://github.com/revcodeshq/BBGbot#readme",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "prod": "NODE_ENV=production node index.js",
    "validate-config": "node validate-config.js",
    "validate-production": "node -e \"require('./src/utils/production-validator').generateProductionReport()\"",
    "health-check": "node -e \"require('./src/utils/health-check').getHealthStatus()\"",
    "lint": "echo 'Linting not configured yet'",
    "test": "echo \"Error: no test specified\" && exit 1",
    "docker:build": "docker build -t bbg-discord-bot .",
    "docker:run": "docker run -d --name bbg-bot --env-file .env bbg-discord-bot",
    "docker:stop": "docker stop bbg-bot && docker rm bbg-bot",
    "docker:logs": "docker logs -f bbg-bot",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@discordjs/opus": "^0.10.0",
    "@snazzah/davey": "^0.1.7",
    "@vitalets/google-translate-api": "^9.2.1",
    "assemblyai": "^4.16.1",
    "axios": "^1.12.2",
    "discord.js": "^14.22.1",
    "dotenv": "^17.2.2",
    "libsodium-wrappers": "^0.7.15",
    "mongoose": "^8.18.2",
    "node-fetch": "^3.3.2",
    "prism-media": "^1.3.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "type": "commonjs"
}
